import os          # Für Dateiprüfung und Verzeichnisse
import toml        # Für Lesen/Schreiben von TOML-Dateien

# wird großgeschrieben, da Konstante (=Wert der sich während der Programmlaufzeit nicht mehr ändern soll) 
# Zeile 4 legt fest, wo die Konfigurationsdatei liegt.
CONFIG_PATH = "config.toml" 

 #definieren einer Funktion mit dem Namen lade_config.
#hat keine Eingabeparameter+ soll die Konfigurationsdatei laden und zurückgeben
def lade_config():

#prüfen ob eine Datei unter dem Pfad, der in CONFIG_PATH steht (z.B. "config.toml") existiert
#os.path.exists() ist eine Funktion aus dem os-Modul
#gibt true zurück, wenn die Datei oder der Ordner existiert
    if os.path.exists(CONFIG_PATH): 

#Wenn die Datei existiert wird sie mit toml.load() eingelesen
#toml.load() öffnet die Datei und wandelt den Inhalt (TOML-Text) in ein Python-Objekt (z.B. Dictionary) um
# return gibt dieses Objekt zurück damit kannst du später z. B. auf config["global"]["port_min"] zugreifen
        return toml.load(CONFIG_PATH)
    
#Wenn die Datei nicht existiert, wird eine Fehlermeldung ausgelöst (raise):
#FileNotFoundError Fehlertyp für „Datei fehlt“
    else:
        raise FileNotFoundError("config.toml nicht gefunden.")